@page
@model RazorRestaurant.Pages.Menu.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            Zdjęcie
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product.image != null)
            {
                <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Product.image)" alt="Product Image" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-secondary">Edytuj</a> |
    <a asp-page="./Index" class="btn btn-primary">Powrót do Menu</a>
</div>
